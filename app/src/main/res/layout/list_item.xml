<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="@dimen/zero_layout_width"
        android:layout_weight="3"
        android:layout_height="wrap_content"
       tools:text="@string/hole_1_text"
        android:id="@+id/holeLabel"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="@dimen/zero_layout_width"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        tools:text="@string/stroke_0_text"
        android:id="@+id/strokeCount"
        android:textSize="24sp"/>

    <Button
        android:layout_width="@dimen/zero_layout_width"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/minus_button"
        android:id="@+id/removeStrokeButton"
        android:textSize="24sp"/>

    <Button
        android:layout_width="@dimen/zero_layout_width"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/plus_button"
        android:id="@+id/addStrokeButton"
        android:textSize="24sp"/>
</LinearLayout>